<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="48dp"
    android:height="48dp"
    android:viewportWidth="24"
    android:viewportHeight="24">

    <!-- Body -->
    <path
        android:name="clock_body"
        android:pathData="M12,6C8.13,6 5,9.13 5,13s3.13,7 7,7 7,-3.13 7,-7 -3.13,-7 -7,-7z"
        android:strokeWidth="1.4"
        android:fillColor="#0A0F14">
        <aapt:attr name="android:strokeColor">
            <gradient android:type="linear"
                android:startX="6" android:startY="8"
                android:endX="18" android:endY="20">
                <item android:offset="0" android:color="#FF00FFC6"/>
                <item android:offset="0.5" android:color="#FF00FFA2"/>
                <item android:offset="1" android:color="#FFFF4D8D"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Signal arc right -->
    <path
        android:name="signal_right"
        android:pathData="M16.5,7.8 C18.2,9.5 18.2,12.5 16.5,14.2"
        android:strokeWidth="1.4"
        android:fillColor="#00000000">
        <aapt:attr name="android:strokeColor">
            <gradient android:type="linear"
                android:startX="16" android:startY="8"
                android:endX="18.5" android:endY="14">
                <item android:offset="0" android:color="#AA00E5FF"/>
                <item android:offset="1" android:color="#AA00FFC6"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Signal arc left -->
    <path
        android:name="signal_left"
        android:pathData="M7.5,7.8 C5.8,9.5 5.8,12.5 7.5,14.2"
        android:strokeWidth="1.4"
        android:fillColor="#00000000">
        <aapt:attr name="android:strokeColor">
            <gradient android:type="linear"
                android:startX="5.5" android:startY="8"
                android:endX="8" android:endY="14">
                <item android:offset="0" android:color="#AA00FFC6"/>
                <item android:offset="1" android:color="#AA6A00FF"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Hands -->
    <path
        android:name="minute_hand"
        android:pathData="M12,13 L12,9.8"
        android:strokeWidth="1.6"
        android:strokeLineCap="round"
        android:strokeColor="#FFFFFFFF"/>
    <path
        android:name="hour_hand"
        android:pathData="M12,13 L14.9,13"
        android:strokeWidth="1.6"
        android:strokeLineCap="round"
        android:strokeColor="#FFFFFFFF"/>
